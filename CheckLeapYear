<script>

 	
function fun(){
yr = parseInt(document.getElementById("year").value);

if (yr%4==0) 
{
if (yr%100==0) {
	
	if(yr%400==0){
		console.log("The year " + yr + " is a leap year");
	}
	else{
		console.log("The year " + yr + " is not a leap year");
	}
	
} else {
	console.log("The year " + yr + " is a leap year");
}	
} else {
	console.log("The year " + yr + " is not a leap year");
}
}

